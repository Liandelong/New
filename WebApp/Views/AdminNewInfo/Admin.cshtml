
@{
    Layout = null;
}
@using NewModel;
@using NewCommon;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>管理员管理</title>
</head>
<body>
    <div> 
        @if (ViewBag.model != null)
        {
            <table style="width:100%" id="tabs">
                <tr><th>标题</th><th>时间</th><th>作者</th><th>类型</th><th>详细</th><th>删除</th><th>修改</th></tr>
                @foreach (CommentInfo commentInfo in (List<CommentInfo>)ViewData["pageList"])
                {
                    <tr>
                        <td>@commentInfo.Title</td>
                        <td>@commentInfo.CreateDateTime.ToShortDateString()</td>
                        <td>@commentInfo.Author</td>
                        <td>@commentInfo.Msg</td>
                        <td>@commentInfo.UserName</td>
                        <td><a href="javascript:void(0)" class="deletes" ids="@commentInfo.Id">删除</a></td>
                    </tr>
                }
            </table>
            <p class="page_nav">
                @MvcHtmlString.Create(PageBar.GetPageBar((int)ViewData["pageIndex"], (int)ViewData["pageCount"]))
            </p>
        }
        else
        {
            <span>暂无数据</span>
        } 
    </div>
</body>
</html>
