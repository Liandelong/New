
@{
    Layout = null;
}
@using NewModel
@using NewCommon
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>新闻评论管理</title>
    <link href="~/Content/tableStyle.css" rel="stylesheet" />
    <link href="~/Content/pageBar.css" rel="stylesheet" />
    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>
    <script src="~/Scripts/easyui-lang-zh_CN.js"></script>
    <script type="text/javascript">
        $(function () {
            //删除
            $(".easyui-linkbutton:contains(删除)").click(function () {
                deleteInfo($(this).attr("ids"), $(this));
            });

            //删除
            function deleteInfo(id, control) {
                $.messager.confirm("删除评论", "确定要删除该记录吗?", function (r) {
                    if (r) {
                        $.post("/AdminNewInfo/DeleteCommon", { "id": id }, function (data) {
                            if (data == "ok") {
                                $.messager.alert("提示", "删除成功!", "info");
                                $(control).parent().parent().remove();
                            } else {
                                $.messager.alert("提示", "删除 失败!", "info");
                            }
                        });
                    }
                });
            }
        });
    </script>
</head>
<body>
    <div>
        @if (ViewData["pageList"] != null)
        {
            <div style="float:left">
                搜索： <input class="easyui-searchbox" data-options="prompt:'跟据标题或作者',menu:'#mm',searcher:doSearch" style="width:300px" />
                <script>
		        function doSearch(value,name){
			            alert('You input: ' + value);
		            }
                </script>
            </div>
            <table style="width:100%" id="tabs">
                <tr><th>标题</th><th>评论时间</th><th>作者</th><th>评论内容</th><th>评论者</th>><th>删除</th></tr>
                @foreach (CommentInfo commentInfo in (List<CommentInfo>)ViewData["pageList"])
                {
                    <tr>
                        <td>@commentInfo.Title</td>
                        <td>@commentInfo.CreateDateTime.ToString("yyyy年MM月dd日")</td>
                        <td>@commentInfo.Author</td>
                        <td>@commentInfo.Msg</td>
                        <td>@commentInfo.UserName</td>
                        <td><a href="#" class="easyui-linkbutton" ids="@commentInfo.Id" data-options="iconCls:'icon-remove'">删除</a></td>
                    </tr>
                }
            </table>
            <p class="page_nav">
                @MvcHtmlString.Create(PageBar.GetPageBar((int)ViewData["pageIndex"], (int)ViewData["pageCount"]))
            </p>
        }
        else
        {
            <span>暂无数据</span>
        } 
    </div>
</body>
</html>
